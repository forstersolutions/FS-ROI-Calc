      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    input {
      padding: 10px;
      margin: 10px 0;
      width: 100%;
      box-sizing: border-box;
    }

    button {
      padding: 10px 20px;
      background-color: #007BFF;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>AI-Powered ROI Calculator</h1>
    <form id="roi-form">
      <label for="revenue">Revenue: </label>
      <input type="number" id="revenue" name="revenue"><br/>

      <label for="costs">Operational Costs: </label>
      <input type="number" id="costs" name="costs"><br/>

      <label for="employees">Number of Employees: </label>
      <input type="number" id="employees" name="employees"><br/>

      <label for="timeSaved">Time Saved (hours): </label>
      <input type="number" id="timeSaved" name="timeSaved"><br/>

      <button type="button" onclick="calculateROI()">Calculate ROI</button>
    </form>
    <h2>ROI: <span id="roi"></span></h2>
  </div>

  <script>
    function calculateROI() {
      const revenue = document.getElementById('revenue').value;
      const costs = document.getElementById('costs').value;
      const employees = document.getElementById('employees').value;
      const timeSaved = document.getElementById('timeSaved').value;

      const benefits = timeSaved * employees;
      const totalCosts = parseFloat(costs) + benefits;
      const roiValue = (benefits - totalCosts) / totalCosts;

      document.getElementById('roi').textContent = roiValue.toFixed(2);
    }
  </script>
</body>
